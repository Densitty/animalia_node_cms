      <li class="nav-item">
        <a class="nav-link text-center" id="sidenavToggler">
          <i class="fa fa-fw fa-angle-left"></i>
        </a>
      </li>
    </ul>
    {{!-- Sidenav toggler --}}

    {{!-- admin navbar --}}
    {{> admin/admin-navbar}}
    {{!-- /admin navbar --}}
