      <script>
        const checkboxes = document.querySelectorAll(".approveComment");


        if(checkboxes) {
        let checkValue;
          checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', e => {
              if(checkbox.checked) {
                checkValue = checkbox.checked
              } else {
                checkValue = !checkValue
              }

              axios.post('/admin/comments/approve-comment', {id: e.target.dataset.id, approveComment: checkValue})
                  .then(res => {
                    toastr.success(`Comment ${res.data.id} updated`)
                  } )
                  .catch(error => {
                      console.error('There was an error!', error);
                  });

            })
          })
        }

        const ctx = document.getElementById('myChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Posts', 'Comments', 'Categories'],
                datasets: [{
                    label: 'Simple Site Statistics',
                    data: [{{postCount}}, {{commentCount}}, {{categoryCount}}],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
