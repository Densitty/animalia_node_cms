<h1>All Stories</h1>

<table class="table table-bordered table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Image</th>
      <th scope="col">Status</th>
      <th scope="col">Category</th>
      <th scope="col">Allow Comments</th>
      <th scope="col">Date Added</th>
      <th scope="col">Update Story</th>
      <th scope="col">Remove Story</th>
    </tr>
  </thead>
  <tbody>
    {{#each posts}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{title}}</td>
        <td><img
            style="height: 50; width: 50;"
            src="/uploads/{{image}}"
            alt="{{title}}"
          />
        </td>
        <td>{{status}}</td>
        <td>{{category.name}}</td>
        <td>{{allowComments}}</td>
        <td>{{generateTime date "Do MMM, YYYY"}}</td>
        <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">
            Edit
          </a>
        </td>
        <td>
          <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Remove</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>